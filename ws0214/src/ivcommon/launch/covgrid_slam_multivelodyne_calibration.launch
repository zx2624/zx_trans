<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <arg name="rviz" default="true" />
  
  
  <arg name="configfile" default="$(find covgrid_slam)/config/configcalibration.xml" />
  <arg name="logdir" default="--log_dir=/home/jkj/catkin_ws/log" />
  <arg name="glogparam" default="--logtostderr=0  --colorlogtostderr=1 --stderrthreshold=5   $(arg logdir)" />

  <node pkg="covgrid_slam" type="masternode" name="masternode" args="$(arg glogparam)" output="screen">
  	<param name="config_file" value="$(arg configfile)"/>
  </node>



  
  <node pkg="covgrid_slam" type="getmutivelodynedata" name="getmutivelodynedata" args="--logtostderr=0  --colorlogtostderr=1 --stderrthreshold=5   $(arg logdir)" output="screen">
  <param name="fix_frame" value="true"/>
  </node>

  <node pkg="covgrid_slam" type="getinsdata" name="getinsdata" args="$(arg glogparam)" output="screen">
  </node>
  
  <group if="$(arg rviz)">
    <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find covgrid_slam)/rviz_cfg/calibration.rviz" />
  </group>

</launch>
